#include <stdio.h>
#include <stdlib.h>
void swap_fun(int *ptr1,int *ptr2);
void bubble_sort_func(int arr[], int length);
# define MAX     6
unsigned int DATA[MAX] = {5,9,10 ,7,17,1};

void main ()
	{


bubble_sort_func(DATA ,MAX);

for(int i =0 ; i < MAX ; i++)



	{
		printf ("%i", DATA[i]);
		printf ("   ");


	}


	}


void swap_fun(int *ptr1,int *ptr2)
{
 int temp;
temp = *ptr1;
*ptr1= *ptr2;
*ptr2 = temp ;

}


void bubble_sort_func(int arr[], int length)
{
for (int data =0 ; data <=length-1 ; data++)
	{
for(int itiration =0 ; itiration <= length-1 ; itiration ++)


        {

     if (arr[itiration] < arr[itiration +1])
 			{
			swap_fun(&arr[itiration],&arr[itiration+1]);
			}



	}



	}

}
